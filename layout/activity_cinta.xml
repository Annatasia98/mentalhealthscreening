<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    tools:context=".cinta">

    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JEJAK MOOD"
        android:textColor="#48D1CC"
        android:textSize="50sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/bannerDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cinta"
        android:textColor="#48D1CC"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner" />

    <CheckBox
        android:id="@+id/kasih"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Kasih"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/bakti"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Bakti"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/persahabatan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Persahabatan"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/hati"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Kebaikan Hati"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/jatuhcinta"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Jatuh Cinta"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/hormat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Hormat"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/kepercayaan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Kepercayaan"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/penerimaan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Penerimaan"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/kedekatan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Kedekatan"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HANTAR"
        android:id="@+id/button"
        android:layout_gravity="center"
        android:layout_marginHorizontal="70dp"/>

</LinearLayout>