<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    tools:context=".Malu">

    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JEJAK MOOD"
        android:textColor="#48D1CC"
        android:textSize="50sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/bannerDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Malu"
        android:textColor="#48D1CC"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner" />

    <CheckBox
        android:id="@+id/kesal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Kesal Hati"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/hancur"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Hancur Lebur"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/sesal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sesal"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/hina"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Hina"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/maluhati"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Malu Hati"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/bersalah"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Bersalah"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/aib"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Aib"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HANTAR"
        android:id="@+id/button"
        android:layout_gravity="center"
        android:layout_marginHorizontal="70dp"/>

</LinearLayout>