<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    tools:context=".happy">

    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JEJAK MOOD"
        android:textColor="#48D1CC"
        android:textSize="50sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/bannerDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kegembiraan"
        android:textColor="#48D1CC"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner" />

    <CheckBox
        android:id="@+id/gembira"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Gembira"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/riang"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Riang"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/puas"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Puas"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/senang"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Senang"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/terhibur"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Terhibur"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/bangga"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Bangga"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/bahagia"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Bahagia"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/terpesona"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Terpesona"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/girang"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Girang"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />
    <CheckBox
        android:id="@+id/dipenuhi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Rasa Dipenuhi"
        android:textColor="@color/black"
        app:buttonTint="@color/black"
        android:layout_marginHorizontal="70dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HANTAR"
        android:id="@+id/button"
        android:layout_gravity="center"
        android:layout_marginHorizontal="70dp"/>

</LinearLayout>